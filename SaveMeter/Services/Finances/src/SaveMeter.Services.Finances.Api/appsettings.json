{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Database": {
    "ConnectionString": ""
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "app": {
    "name": "SaveMeter Finances",
    "service": "savemeter-finances",
    "version": "1"
  },
  "AllowedHosts": "*",
  "metrics": {
    "enabled": true,
    "influxEnabled": false,
    "prometheusEnabled": true,
    "influxUrl": "http://localhost:8086",
    "database": "savemeter",
    "env": "local",
    "interval": 5
  },
  "jaeger": {
    "enabled": true,
    "serviceName": "service-finances",
    "udpHost": "localhost",
    "udpPort": 6831,
    "maxPacketSize": 0,
    "sampler": "const",
    "excludePaths": [ "/ping", "/metrics" ]
  },
  "prometheus": {
    "Enabled": true,
    "EndPoint": "prometheus-metrics"
  },
  "consul": {
    "enabled": true,
    "url": "http://consul:8500",
    "service": "services-finances",
    "address": "services-finances",
    "port": "5004",
    "pingEnabled": true,
    "pingEndpoint": "ping",
    "pingInterval": 3,
    "removeAfterInterval": 3
  },
  "fabio": {
    "enabled": false,
    "url": "http://fabio:9999",
    "service": "finance-service"
  },
  "mongoDb": {
    "Connection": "mongodb://mongoadmin:secret@localhost:27017",
    "DatabaseName": "finances"
  },
  "machineLearning": {
    "transactionModelPath": ""
  } 
}
